<div class="hero hero--home">
  <div class="hero__copy">
    <h1>Paste a recipe link, get a grocery list</h1>
    <p class="m-hidden">Create a simple grocery checklist by pasting a link to a recipe on one of 100+ different recipe websites.</p>
  </div>
  <%= render 'form', recipe: @recipe %>
</div>
<% if current_user && @liked_recipes.count > 0 %>
  <div class="container">
    <h2>My Recipes</h2>
    <div class="recipe-carousel">
      <% @liked_recipes.each do |recipe| %>
        <%= render 'recipe_card_large', recipe: recipe, recipe_source: recipe.recipe_source, show_source: true %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="container">
  <h2>Recently Used</h2>
  <div class="recipe-carousel">
    <% @recipes.each do |recipe| %>
      <%= render 'recipe_card_large', recipe: recipe, recipe_source: recipe.recipe_source, show_source: true %>
    <% end %>
  </div>
</div>
